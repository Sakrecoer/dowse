BLENDPATH="${BLENDPATH:-$(dirname $0)}"

source $BLENDPATH/config

notice "$version"

blend_postinst() {
	req=(blend_name dowse_release fetch_script)
	ckreq || return 

	notice "executing $blend_name postinst"

	# Download the fetch script for Dowse
	wget -O $strapdir/fetch $fetch_script
	sed -i "s/\$DOWSE_TAG/$dowse_release/" $strapdir/fetch
	chroot-script -d fetch

	# Remove conflicting programs starting at boot
	# Disable services starting at boot
	for s in mosquitto redis-server hostapd netdata supervisor isc-dhcp-server
	do
		update-rc.d $s disable
	done

	# Start dowse at boot
	update-rc.d dowse start
}


